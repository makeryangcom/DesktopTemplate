{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipDefaultLibCheck": true,
        "sourceMap": false,
        "include": [
            "template/src/**/*.ts",
            "template/src/**/*.d.ts",
            "template/src/**/*.tsx",
            "template/src/**/*.vue",
            "tools/script/**/*.ts"
        ]
    }
}
